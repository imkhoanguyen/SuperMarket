@model List<Product>
<div class="container">
    <h2 class="text-center text-primary">Product</h2>
    <hr />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Category Name</td>
                <td>Product Name</td>
                <td>Price</td>
                <td>Quantity</td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>
                        <a class="btn btn-link" asp-controller="product" asp-action="edit" asp-route-id="@product.ProductId">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-link" asp-controller="product" asp-action="delete" asp-route-productId="@product.ProductId" onclick="return confirmDelete();">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="product" asp-action="add">Add</a>
</div>
@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this product?");
        }
    </script>
}