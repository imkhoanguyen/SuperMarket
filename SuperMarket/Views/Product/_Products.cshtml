@model IEnumerable<Product>
@if(Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Quantity</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr class="product-row" product-id="@product.ProductId">    
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Quantity
                    </td>
                </tr>
            }
        </tbody>
    </table>
}