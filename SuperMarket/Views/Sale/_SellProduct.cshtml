@model Product
@if (Model != null)
{

    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input class="form-control" type="text" asp-for="Name" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-form-label">Price</label>
        <input class="form-control" type="text" asp-for="Price" readonly />
    </div>


}